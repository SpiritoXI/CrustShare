{
  "buildCommand": "pnpm run build",
  "devCommand": "pnpm run dev",
  "installCommand": "pnpm install",
  "framework": "nextjs",
  "regions": ["hkg1"],
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "PIN_CODE": "@pin-code",
      "CRUSTFILES_ACCESS_TOKEN": "@crustfiles-access-token",
      "CRUSTFILES_BASE_URL": "@crustfiles-base-url"
    }
  },
  "functions": {
    "app/api/**/*": {
      "maxDuration": 60,
      "memory": 1024
    }
  }
}
